<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/makeOneRoomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:text="1인 방 만들기"
        app:layout_constraintBaseline_toBaselineOf="@+id/makeTwoRoomBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/makeTwoRoomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="76dp"
        android:text="2인 방 만들기"
        app:layout_constraintStart_toEndOf="@+id/makeOneRoomBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/makeThreeRoomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="3인 방 만들기"
        app:layout_constraintBaseline_toBaselineOf="@+id/makeTwoRoomBtn"
        app:layout_constraintStart_toEndOf="@+id/makeTwoRoomBtn" />

    <Button
        android:id="@+id/makeFourRoomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="74dp"
        android:text="4인 방 만들기"
        app:layout_constraintBaseline_toBaselineOf="@+id/makeThreeRoomBtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/addrText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:inputType="text"
        android:text="192.168.0."
        app:layout_constraintBottom_toTopOf="@+id/enterRoomBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/enterRoomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginBottom="40dp"
        android:text="접속"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addrText" />
</androidx.constraintlayout.widget.ConstraintLayout>